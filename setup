}
clear
show_menu

      if [[ $bound_x1min == 1 ]]
      then
         bound_x1min="outflow"
         BX1MIN="Outflow"
      elif [[ $bound_x1min == 2 ]]
      then
         bound_x1min="reflective"
         BX1MIN="Reflective"
      fi

